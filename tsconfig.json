{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        // "composite": true,
        "sourceMap": false,
        "declaration": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "declarationMap": true,
        // "declarationDir": "dist/types",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        // "forceConsistentCasingInFileNames": true,
        "lib": [
            "ESNext"
        ],
    },
    "include": [
        "src/**/*.ts",
        // "src/types/global.d.ts",
        // "src/types/cursor.d.ts",
        // "src/types/style.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}